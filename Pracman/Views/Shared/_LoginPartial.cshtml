@using Microsoft.AspNetCore.Identity
@using Pracman.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <!-- Avatar User -->
    <li class="dropdown">
        <span class="topbar-btn" data-toggle="dropdown"><img class="avatar" src="~/img/avatar/default.jpg" alt="..."></span>
        <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" href="page/profile.html"><i class="ti-user"></i> Profile</a>
            <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Index" title="Settings"><i class="ti-settings"></i>Settings</a>
            <div class="dropdown-divider"></div>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                <a class="dropdown-item" onclick="$(this).closest('form').submit()" style="cursor: pointer;"><i class="ti-power-off"></i> Logout</a>
            </form>
        </div>
    </li>
    <!-- END Avatar User -->
}
else
{
    <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
}



